@page
@model ContactModel
@{
    ViewData["Title"] = "Contact - Kimberly S. Egoc";
}

<!-- Page content-->
<section class="py-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
            <div class="text-center mb-5">
                <div class="d-flex align-items-center justify-content-center">
                    <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3 d-flex align-items-center justify-content-center">
                        <i class="bi bi-envelope"></i>
                    </div>
                </div>
                <h1 class="fw-bolder">Get in touch</h1>
                <p class="lead fw-normal text-muted mb-0">Let's work together!</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <!-- Contact Information -->


                    <!-- Contact Form -->
                    <form method="post" asp-page-handler="SendMessage">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <!-- Name input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="ContactForm.Name" type="text" placeholder="Enter your name..." />
                            <label asp-for="ContactForm.Name">Full name</label>
                            <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                        </div>
                        
                        <!-- Email address input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="ContactForm.Email" type="email" placeholder="name@example.com" />
                            <label asp-for="ContactForm.Email">Email address</label>
                            <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Phone number input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="ContactForm.Phone" type="tel" placeholder="(123) 456-7890" />
                            <label asp-for="ContactForm.Phone">Phone number (optional)</label>
                            <span asp-validation-for="ContactForm.Phone" class="text-danger"></span>
                        </div>
                        
                        <!-- Message input-->
                        <div class="form-floating mb-3">
                            <textarea class="form-control" asp-for="ContactForm.Message" placeholder="Enter your message here..." style="height: 10rem"></textarea>
                            <label asp-for="ContactForm.Message">Message</label>
                            <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success" role="alert">
                                @Model.SuccessMessage
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.ErrorMessage
                            </div>
                        }
                        
                        <!-- Submit Button-->
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!-- Client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}

